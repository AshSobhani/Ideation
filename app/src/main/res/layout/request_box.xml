<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/projectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Title"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/requestDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/requesterName"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/requestDate"
            android:layout_toRightOf="@+id/requestDate"
            android:gravity="center"
            android:text="20/02/2019"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/requester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/projectName"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Requester:"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/requestDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/requester"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Date:"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/requesterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/projectName"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@+id/requester"
            android:layout_toRightOf="@+id/requester"
            android:text="John Doe"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/requestReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/requestDateTime"
            android:layout_marginBottom="4dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
            android:textColor="@color/colorAccent"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/requestDateTime"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/acceptRequestButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:padding="4dp"
                app:srcCompat="@drawable/request_accept"
                tools:ignore="VectorDrawableCompat" />

            <ImageButton
                android:id="@+id/declineRequestButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:padding="4dp"
                app:srcCompat="@drawable/request_decline"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>